#include <stdio.h>

int main() {
    int n, i;
    float sum = 0.0, number, average;

    printf("Enter the number of elements: ");
    scanf("%d", &n);

    printf("Enter %d numbers:\n", n);
    for (i = 0; i < n; i++) {
        scanf("%f", &number);
        sum += number;
    }

    average = sum / n;
    printf("Average: %.2f\n", average);

    return 0;
}
